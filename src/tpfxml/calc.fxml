<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>


<GridPane alignment="CENTER" hgap="10.0" vgap="10.0" fx:controller="tpfxml.CalcControl" xmlns:fx="http://javafx.com/fxml">
	<TextField fx:id="textField" alignment="TOP_RIGHT" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="4">
	</TextField>
	<Button text="7" onAction="#addDigit" GridPane.columnIndex="0" GridPane.rowIndex="1" prefWidth="30" prefHeight="30">
	</Button>
	<Button text="8" onAction="#addDigit" GridPane.columnIndex="1" GridPane.rowIndex="1" prefWidth="30" prefHeight="30">
	</Button>
	<Button text="9" onAction="#addDigit" GridPane.columnIndex="2" GridPane.rowIndex="1" prefWidth="30" prefHeight="30">
	</Button>
	<Button text="4" onAction="#addDigit" GridPane.columnIndex="0" GridPane.rowIndex="2" prefWidth="30" prefHeight="30">
	</Button>
	<Button text="5" onAction="#addDigit" GridPane.columnIndex="1" GridPane.rowIndex="2" prefWidth="30" prefHeight="30">
	</Button>
	<Button text="6" onAction="#addDigit" GridPane.columnIndex="2" GridPane.rowIndex="2" prefWidth="30" prefHeight="30">
	</Button>
	<Button text="1" onAction="#addDigit" GridPane.columnIndex="0" GridPane.rowIndex="3" prefWidth="30" prefHeight="30">
	</Button>
	<Button text="2" onAction="#addDigit" GridPane.columnIndex="1" GridPane.rowIndex="3" prefWidth="30" prefHeight="30">
	</Button>
	<Button text="3" onAction="#addDigit" GridPane.columnIndex="2" GridPane.rowIndex="3" prefWidth="30" prefHeight="30">
	</Button>
	<Button text="CL" onAction="#clear" GridPane.columnIndex="0" GridPane.rowIndex="4" prefWidth="30" prefHeight="30">
	</Button>
	<Button text="0" onAction="#addDigit" GridPane.columnIndex="1" GridPane.rowIndex="4" prefWidth="30" prefHeight="30">
	</Button>
	<Button text="=" onAction="#calculate" GridPane.columnIndex="2" GridPane.rowIndex="4" prefWidth="30" prefHeight="30">
	</Button>
	<Button text="+" onAction="#addOperator" GridPane.columnIndex="3" GridPane.rowIndex="1" prefWidth="30" prefHeight="30">
	</Button>
	<Button text="-" onAction="#addOperator" GridPane.columnIndex="3" GridPane.rowIndex="2" prefWidth="30" prefHeight="30">
	</Button>
	<Button text="*" onAction="#addOperator" GridPane.columnIndex="3" GridPane.rowIndex="3" prefWidth="30" prefHeight="30">
	</Button>
	<Button text="/" onAction="#addOperator" GridPane.columnIndex="3" GridPane.rowIndex="4" prefWidth="30" prefHeight="30">
	</Button>
</GridPane>

